<RelativeLayout 

xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ridrio.physicist.MenuActivity$PlaceholderFragment" 

>

    <Button
        android:id="@+id/vector"
        android:layout_width="145dp"
        android:layout_height="100dp"
        android:background="@drawable/vector" />

    <Button
        android:id="@+id/radMotion"
        android:layout_width="145dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/vector"
        android:layout_below="@+id/vector"
        android:background="@drawable/tdmotion"  />

    <Button
        android:id="@+id/motion4but"
        android:layout_width="145dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/radMotion"
        android:layout_below="@+id/radMotion"
        android:background="@drawable/lawsofangmotion" />

    <Button
        android:id="@+id/Button8"
        android:layout_width="145dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Button6"
        android:background="@drawable/instructions" />

    <Button
        android:id="@+id/linMotion"
        android:layout_width="145dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/vector"
        android:layout_alignBottom="@+id/vector"
        android:layout_alignLeft="@+id/Button6"
        android:background="@drawable/linearmotion" />

    <Button
        android:id="@+id/Button6"
        android:layout_width="145dp"
        android:layout_height="100dp"
        android:layout_alignRight="@+id/Button8"
        android:layout_below="@+id/mechanics"
        android:background="@drawable/work" />

    <Button
        android:id="@+id/Downbutton"
        android:layout_width="145dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Button7"
        android:background="@drawable/aboutus" />

    <Button
        android:id="@+id/mechanics"
        android:layout_width="145dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/radMotion"
        android:layout_alignBottom="@+id/radMotion"
        android:layout_alignLeft="@+id/linMotion"
        android:background="@drawable/lawsofmotion" />

    <Button
        android:id="@+id/Button7"
        android:layout_width="145dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/motion4but"
        android:layout_below="@+id/motion4but"
        android:background="@drawable/gravity"/>

</RelativeLayout>