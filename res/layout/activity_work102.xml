<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.BiTechX.physics_assistant.formula2.Motion101Activity" >

    <EditText
        android:id="@+id/val1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/formulamotion"
        android:layout_alignRight="@+id/formulamotion"
        android:layout_below="@+id/formulamotion"
        android:hint="Value Of W"
        android:gravity="center"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/val2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/val1"
        android:layout_alignRight="@+id/val1"
        android:layout_below="@+id/val1"
        android:hint="Value Of k"
        android:gravity="center"
        android:ems="10" />

    <EditText
        android:id="@+id/val3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/val2"
        android:layout_alignRight="@+id/val2"
        android:layout_below="@+id/val2"
        android:hint="Value Of xi"
        android:gravity="center"
        android:ems="10" />

    <EditText
        android:id="@+id/val4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/val3"
        android:layout_alignRight="@+id/val3"
        android:layout_below="@+id/val3"
        android:hint="Value Of xf"
        android:gravity="center"
        android:ems="10" />

    <Button
        android:id="@+id/okbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/val4"
        android:layout_centerHorizontal="true"
        android:text="OK" />

    <Button
        android:id="@+id/formulamotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/work102normal"
        
        />

</RelativeLayout>