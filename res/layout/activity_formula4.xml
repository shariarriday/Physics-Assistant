<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgmain"
    tools:context="com.BiTechX.physics_assistant.formula4.Formula4Activity" >
    <Button
        android:id="@+id/motion301"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/motion301" 
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/motion302"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/motion301"
        android:layout_below="@+id/motion301"
        android:background="@drawable/motion302" />

    <Button
        android:id="@+id/motion303"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/motion302"
        android:layout_below="@+id/motion302"
        android:background="@drawable/motion303" />

    <Button
        android:id="@+id/motion304"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/motion303"
        android:layout_below="@+id/motion303"
        android:background="@drawable/motion304" />

    <Button
        android:id="@+id/motion305"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/motion304"
        android:layout_below="@+id/motion304"
        android:background="@drawable/motion305" />

    <Button
        android:id="@+id/motion306"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/motion305"
        android:layout_below="@+id/motion305"
        android:background="@drawable/motion306" />

    <Button
        android:id="@+id/motion307"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/motion306"
        android:layout_below="@+id/motion306"
        android:background="@drawable/motion307" />

    <Button
        android:id="@+id/motion308"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/motion307"
        android:layout_below="@+id/motion307"
        android:background="@drawable/motion308" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/VectorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Laws of Motion"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
