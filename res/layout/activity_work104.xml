<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.BiTechX.physics_assistant.formula2.Motion101Activity" >

    <EditText
        android:id="@+id/val1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/formulamotion"
        android:layout_alignRight="@+id/formulamotion"
        android:layout_below="@+id/formulamotion"
        android:ems="10"
        android:gravity="center"
        android:hint="Value Of Wab"
        >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/val2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/val1"
        android:layout_alignRight="@+id/val1"
        android:layout_below="@+id/val1"
        android:ems="10"
        android:gravity="center"
        android:hint="Value Of m"
        />

    <EditText
        android:id="@+id/val3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/val2"
        android:layout_alignRight="@+id/val2"
        android:layout_below="@+id/val2"
        android:ems="10"
        android:gravity="center"
        android:hint="Value Of rb"
        />

    <EditText
        android:id="@+id/val4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/val3"
        android:layout_alignRight="@+id/val3"
        android:layout_below="@+id/val3"
        android:ems="10"
        android:gravity="center"
        android:hint="Value Of ra"
        />

    <Button
        android:id="@+id/formulamotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/work104normal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp" />

    <Button
        android:id="@+id/okbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/val4"
        android:layout_centerHorizontal="true"
        android:text="OK" />

</RelativeLayout>