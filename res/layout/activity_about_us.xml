<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btxstrpe"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.BiTechX.physics_assistant.info.AboutUsActivity" >
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/VectorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:text="About us"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textStyle="bold" />
        

    
    

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     
    
        android:text="We are a small team of IT enthusiasts named Bi-TechX. &#xA;&#xA;This app was developed by: &#xA;&#xA;
        Shariar Riday &#xA;
        Raiyaan Abdullah &#xA;
        Rusab Sarmun &#xA;
        Mumshad Nahiyan &#xA;
        Shafqat Ahmed &#xA; &#xA;To know more about us,click the link below:
"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18dp" />

      <TextView
        android:id="@+id/textView2"
        android:layout_below="@id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:text="www.facebook.com/team.btx"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18dp" />
      </LinearLayout>
</RelativeLayout>