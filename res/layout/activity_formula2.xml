<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgmain"
    tools:context="com.ridrio.physicist.FormulaActivity$PlaceholderFragment" >
     <Button
        android:id="@+id/motion101"
        android:layout_width="match_parent"
        android:layout_height="40dp"
       
        android:layout_centerHorizontal="true"
        android:background="@drawable/motion101"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/motion102"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/motion101"
        android:layout_centerHorizontal="true"
        android:background="@drawable/motion102"
        />

    <Button
        android:id="@+id/motion103"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/motion102"
        
        android:background="@drawable/motion103" />

    <Button
        android:id="@+id/motion104"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/motion103"
        android:layout_below="@+id/motion103"
        
        android:background="@drawable/motion104" />

    <Button
        android:id="@+id/motion105"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/motion104"
        android:layout_below="@+id/motion104"
        android:background="@drawable/motion105" />

    <Button
        android:id="@+id/motion106"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/motion105"
        android:layout_below="@+id/motion105"
        android:background="@drawable/motion106" />

    <Button
        android:id="@+id/motion107"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/motion106"
        android:layout_below="@+id/motion106"
        android:background="@drawable/motion107" />

    <Button
        android:id="@+id/motion108"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/motion107"
        android:layout_below="@+id/motion107"
        android:background="@drawable/motion108" />

    <Button
        android:id="@+id/motion109"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/motion108"
        android:layout_below="@+id/motion108"
        android:background="@drawable/motion109" />

    <Button
        android:id="@+id/motion110"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/motion109"
        android:layout_below="@+id/motion109"
        android:background="@drawable/motion110" 
        />

    <TextView
        android:id="@+id/VectorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Linear Motion"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>


