<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.BiTechX.physics_assistant.formula5.Formula5Activity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/VectorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Laws of Angular Motion"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>
    <Button
        android:id="@+id/motion401"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/motion401"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/motion402"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignLeft="@+id/motion401"
        android:layout_below="@+id/motion401"
        android:background="@drawable/motion402"  />

    <Button
        android:id="@+id/motion403"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignLeft="@+id/motion402"
        android:layout_below="@+id/motion402"
        android:background="@drawable/motion403"  />

    <Button
        android:id="@+id/motion404"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignLeft="@+id/motion403"
        android:layout_below="@+id/motion403"
        android:background="@drawable/motion404"  />

    <Button
        android:id="@+id/motion405"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/motion404"
        android:layout_centerHorizontal="true"
        android:background="@drawable/motion405"  />

    <Button
        android:id="@+id/motion406"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignLeft="@+id/motion405"
        android:layout_below="@+id/motion405"
        android:background="@drawable/motion406"  />

    <Button
        android:id="@+id/motion407"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/motion406"
        android:layout_below="@+id/motion406"
        android:background="@drawable/motion407"  />

    <Button
        android:id="@+id/motion408"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_alignRight="@+id/motion406"
        android:layout_below="@+id/motion406"
        android:background="@drawable/motion408"  />

    <Button
        android:id="@+id/motion409"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_alignRight="@+id/motion407"
        android:layout_below="@+id/motion407"
        android:background="@drawable/motion409"  />

    <Button
        android:id="@+id/motion410"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_alignRight="@+id/motion408"
        android:layout_below="@+id/motion408"
        android:background="@drawable/motion410"  />

    <Button
        android:id="@+id/motion411"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/motion409"
        android:layout_below="@+id/motion409"
        android:background="@drawable/motion411"  />

    <Button
        android:id="@+id/motion412"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_alignRight="@+id/motion410"
        android:layout_below="@+id/motion410"
        android:background="@drawable/motion412"  />

</RelativeLayout>