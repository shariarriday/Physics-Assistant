<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgmain"
    tools:context="com.BiTechX.physics_assistant.formula7.Formula7Activity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/VectorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Gravity"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>
    <Button
        android:id="@+id/gravity101"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gravity101" 
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/gravity102"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/gravity101"
        android:layout_alignBottom="@+id/gravity101"
        android:layout_alignParentRight="true"
        android:background="@drawable/gravity102" />

    <Button
        android:id="@+id/gravity103"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/gravity101"
        android:layout_below="@+id/gravity101"
        android:background="@drawable/gravity103" />

    <Button
        android:id="@+id/gravity104"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/gravity103"
        android:layout_alignBottom="@+id/gravity103"
        android:layout_alignRight="@+id/gravity102"
        android:background="@drawable/gravity104"/>

    <Button
        android:id="@+id/gravity105"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/gravity104"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gravity105" />

    <Button
        android:id="@+id/gravity106"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/gravity103"
        android:layout_below="@+id/gravity105"
        android:background="@drawable/gravity106" />

    <Button
        android:id="@+id/gravity107"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/gravity106"
        android:layout_alignBottom="@+id/gravity106"
        android:layout_alignRight="@+id/gravity104"
        android:background="@drawable/gravity107" />

    <Button
        android:id="@+id/gravity109"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/gravity108"
        android:layout_alignLeft="@+id/gravity107"
        android:background="@drawable/gravity109"/>

    <Button
        android:id="@+id/gravity110"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignRight="@+id/gravity105"
        android:layout_below="@+id/gravity108"
        android:background="@drawable/gravity110" />

    <Button
        android:id="@+id/gravity111"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignRight="@+id/gravity110"
        android:layout_below="@+id/gravity110"
        android:background="@drawable/gravity111" />

    <Button
        android:id="@+id/gravity112"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/gravity108"
        android:layout_below="@+id/gravity111"
        android:background="@drawable/gravity112" />

    <Button
        android:id="@+id/gravity113"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/gravity112"
        android:layout_alignBottom="@+id/gravity112"
        android:layout_alignRight="@+id/gravity109"
        android:background="@drawable/gravity113"/>

    <Button
        android:id="@+id/gravity114"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_alignRight="@+id/gravity112"
        android:layout_below="@+id/gravity112"
        android:background="@drawable/gravity114" />

    <Button
        android:id="@+id/gravity115"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/gravity114"
        android:layout_alignRight="@+id/gravity113"
        android:background="@drawable/gravity115" />

    <Button
        android:id="@+id/gravity108"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/gravity106"
        android:layout_below="@+id/gravity106"
        android:background="@drawable/gravity108" />

</RelativeLayout>
